<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF">

    <!-- LOADING VIEW -->
    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="16sp"
            android:textColor="#444" />
    </LinearLayout>

    <!-- SUCCESS VIEW -->
    <LinearLayout
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ListView
            android:id="@+id/properties"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:divider="#DDDDDD" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/synthesis_demo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:paddingTop="4dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type or speak your text..."
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text"
            android:padding="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/speak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”Š Speak Text"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/ssml"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Insert SSML"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnMic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ™ Speak"
                android:minHeight="48dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtRecognized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech recognized text will appear here"
            android:paddingTop="8dp"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txtTranslated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translation result"
            android:textSize="16sp"
            android:textColor="#006400"
            android:paddingTop="4dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="12"
            android:progress="0"
            android:layout_marginTop="6dp"
            style="?android:attr/progressBarStyleHorizontal" />

        <Button
            android:id="@+id/open_vosk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Vosk Demo"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</LinearLayout>
