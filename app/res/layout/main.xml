<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_bg">

    <!-- ðŸ”¹ Top Bar -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_menu"
        app:tint="@color/white" />

    <!-- ðŸ”¹ Center Shape -->
    <ImageView
        android:id="@+id/logoShape"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_center_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- ðŸ”¹ Translated Text (now on top, bigger) -->
    <TextView
        android:id="@+id/txtTranslated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoShape"
    android:layout_marginTop="45dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:text=""
        android:textColor="@color/white"

    android:textSize="32sp"
    android:textStyle="bold"
    android:gravity="center_horizontal" />

    <!-- ðŸ”¹ Recognized Text (below translation, smaller) -->
    <TextView
        android:id="@+id/txtRecognized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTranslated"
    android:layout_marginTop="12dp"
        android:textColor="@color/purple_accent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:text=""

    android:textSize="20sp"
        android:textStyle="bold"
    android:gravity="center_horizontal" />

    <!-- ðŸ”¹ Scrollable Settings -->
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtRecognized"
        android:layout_marginTop="12dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- ðŸŸ£ Settings Section -->
            <LinearLayout
                android:id="@+id/settingsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:background="@color/purple_light"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtVoskRaw"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scrollbars="vertical"
                    android:padding="8dp"
                    android:background="#FFFFFF"
                    android:text="Vosk raw output will appear here"
                    android:textSize="13sp"
                    android:textColor="#333"
                    android:gravity="start"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnPartial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§© Partial Mode: ON"
                    android:minHeight="48dp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Final Mode: ON"
                    android:minHeight="48dp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnSmartClip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ‚ Smart Clip (Final Only): ON"
                    android:minHeight="48dp"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spnSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/speech_speeds"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spnWordCount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/wordcount1"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spnWordCount2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/wordcount2"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spnLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/language_choices"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtPitchLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pitch: 55"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingTop="8dp" />

                <SeekBar
                    android:id="@+id/seekPitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="55"
                    android:layout_marginTop="4dp" />

                <Spinner
                    android:id="@+id/spnEngineSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/speech_engines"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
